TON_IN<="0000000100";
PERIOD_IN<="0000001001";
WR<='1';
wait for ck_period;
WR<='0';

for j in 0 to 10 loop
for i in 0 to 10 loop
wait for ck_period*j;
wait for ck_period*j;
END LOOP;

TON_IN<=  std_logic_vector(to_unsigned(j, TON_IN'length));
WR<='1';
wait for ck_period;
WR<='0';

END LOOP;
